@model A21WebApp.Models.EmploiTemps

@{
    ViewData["Title"] = "Edit emploi du temps";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var errors = ViewData["Errors"] as List<string>;
}
<div class="bg"></div>
@*<h4>Edit emploi du temps</h4>*@
<div class="row">
    <div class="col-md-12 text-center">
        <p class="black-lives-matter ">Modifier Emplois du Temps</p>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b style="color: #997A8D;">
                    <label asp-for="ID" class="control-label"></label>
                </b>
                <input asp-for="ID" class="form-control" readonly/>
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b style="color: #997A8D;">
                    <label asp-for="Annee_Scolaire" class="control-label"></label>
                </b>
                <input asp-for="Annee_Scolaire" class="form-control" />
                <span asp-validation-for="Annee_Scolaire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b style="color: #997A8D;">
                    <label asp-for="Nom_Ecole" class="control-label"></label>
                </b>
                <input asp-for="Nom_Ecole" class="form-control" />
                <span asp-validation-for="Nom_Ecole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b style="color: #997A8D;">
                    <label asp-for="Groupe" class="control-label"></label>
                </b>
                <input asp-for="Groupe" class="form-control" />
                <span asp-validation-for="Groupe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b style="color: #997A8D;">
                    <label asp-for="Locale" class="control-label"></label>
                </b>
                <input asp-for="Locale" class="form-control" />
                <span asp-validation-for="Locale" class="text-danger"></span>
            </div>
            <br />
            <div>
                
                <table class="table" border="1">
                    <tr>
                        <th>Jour</th>
                        <th>Periode 1</th>
                        <th>Periode 2</th>
                        <th>Periode 3</th>
                        <th>Periode 4</th>
                        <th>Periode 5</th>
                        
                    </tr>
                    <tbody>                       
                        <tr>
                            <td style="color:#730800;">Lundi</td>
                            @foreach (CrenoHoraire ch in Model.CrenoHoraires.Where(x => x.Jours == "Lundi"))
                            {
                                <td>@await Html.PartialAsync("_EditCrenoHoraire", ch, new ViewDataDictionary(ViewData){ { "num", 1 } })</td>

                            }
                        </tr>
                        <tr>
                            <td style="color:#730800;">Mardi</td>
                            @foreach (CrenoHoraire ch in Model.CrenoHoraires.Where(x => x.Jours == "Mardi"))
                            {
                                <td>@await Html.PartialAsync("_EditCrenoHoraire", ch, new ViewDataDictionary(ViewData){ { "num", 2 } })</td>
                            }
                        </tr>
                        <tr>
                            <td style="color:#730800;">Mercredi</td>
                            @foreach (CrenoHoraire ch in Model.CrenoHoraires.Where(x => x.Jours == "Mercredi"))
                            {
                                <td>@await Html.PartialAsync("_EditCrenoHoraire", ch, new ViewDataDictionary(ViewData){ { "num", 3 } })</td>
                            }
                        </tr>
                        <tr>
                            <td style="color:#730800;">Jeudi</td>
                            @foreach (CrenoHoraire ch in Model.CrenoHoraires.Where(x => x.Jours == "Jeudi"))
                            {
                                <td>@await Html.PartialAsync("_EditCrenoHoraire", ch, new ViewDataDictionary(ViewData){ { "num", 4 } })</td>
                            }
                        </tr>
                        </tr>
                        <tr>
                            <td style="color:#730800;">Vendredi</td>
                            @foreach (CrenoHoraire ch in Model.CrenoHoraires.Where(x => x.Jours == "Vendredi"))
                            {
                                <td>@await Html.PartialAsync("_EditCrenoHoraire", ch, new ViewDataDictionary(ViewData){ { "num", 5 } })</td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@
<div class="text-end" style="color: #997A8D">
    <a asp-action="Index" style="color: #997A8D">Retour au liste</a>
</div>

    @if (@errors?.Count > 0)
    {
    <div class="text-danger">
        <h3>Liste des erreurs</h3>
        @foreach (string e in errors)
            {
            <div>@e<br></div>
            }
    </div>
    }


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
